<UserControl x:Class="LeStreamsFace.CefWebView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>

        <StackPanel VerticalAlignment="Stretch">
            <wpf:WebView x:Name="webView"
                         MinWidth="500"
                         MinHeight="500"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         Loaded="WebView_OnLoaded"
                         PreviewMouseMove="WebView_OnPreviewMouseMove"
                         ToolTip=""
                         ToolTipOpening="WebView_OnToolTipOpening"
                         WebBrowser="{Binding WebBrowser,
                                              Mode=OneWayToSource}" />
        </StackPanel>
    </Grid>
</UserControl>

